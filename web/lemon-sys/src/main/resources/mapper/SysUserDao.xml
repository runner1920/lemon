<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lemon.sys.dao.SysUserDao">
	
	<insert id="save" parameterType="com.lemon.common.model.sys.SysUser" useGeneratedKeys="true" keyProperty="userId">
		insert into sys_user
		(
			`user_id`, 
			`username`, 
			`password`,
			`salt`,
			`email`, 
			`mobile`, 
			`status`,
			`dept_id`,
			`create_time`
		)
		values
		(
			#{userId}, 
			#{username}, 
			#{password},
			#{salt},
			#{email}, 
			#{mobile}, 
			#{status},
			#{deptId},
			#{createTime}
		)
	</insert>
	 
</mapper>